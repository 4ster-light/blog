{
  "type": "module",
  "scripts": {
    "dev": "vite dev --open",
    "build": "vite build",
    "prepare": "svelte-kit sync || echo ''",
    "preview": "deno task build && wrangler pages dev",
    "check": "deno lint && deno fmt && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "svelte-check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "deploy": "deno task build && wrangler pages deploy"
  },
  "devDependencies": {
    "@sveltejs/adapter-cloudflare": "^7.2.4",
    "@sveltejs/kit": "^2.47.3",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@types/node": "^24.9.1",
    "sass-embedded": "^1.93.2",
    "svelte": "^5.41.2",
    "svelte-check": "^4.3.3",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "dotenv": "^17.2.3",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "marked": "^16.4.1",
    "marked-gfm-heading-id": "^4.1.2",
    "marked-highlight": "^2.2.2",
    "wrangler": "^4.44.0"
  }
