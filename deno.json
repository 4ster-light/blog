{
  "unstable": ["fmt-component"],
  "fmt": {
    "lineWidth": 100,
    "semiColons": false,
    "useBraces": "preferNone",
    "exclude": [
      "build",
      ".svelte-kit",
      "node_modules",
      "pnpm-lock.yaml",
      "pnpm-workspace.yaml"
    ]
  },
  "lint": {
    "exclude": [
      "build",
      ".svelte-kit",
      "node_modules"
    ]
  },
  "tasks": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "deno task build && deno run -A ./build/index.js",
    "prepare": "svelte-kit sync || echo ''",
    "check": "deno fmt && deno lint && svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "svelte-check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  }
}
