{
  "unstable": ["fmt-component"],
  "fmt": {
    "lineWidth": 100,
    "semiColons": false,
    "useBraces": "preferNone",
    "trailingCommas": "never",
    "exclude": [
      ".deno-deploy",
      ".svelte-kit",
      "node_modules",
      "deno.lock",
      "**/*.d.ts"
    ]
  },
  "lint": {
    "rules": {
      "exclude": ["no-sloppy-imports"]
    },
    "exclude": [
      ".deno-deploy",
      ".svelte-kit",
      "node_modules",
      "deno.lock",
      "**/*.d.ts"
    ]
  }
}
